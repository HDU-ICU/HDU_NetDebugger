<UserControl
  x:Class="HDU_NetDebugger.Views.MainView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:components="clr-namespace:HDU_NetDebugger.Components"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:models="clr-namespace:HDU_NetDebugger.Models"
  xmlns:vm="clr-namespace:HDU_NetDebugger.ViewModels"
  d:DesignHeight="450"
  d:DesignWidth="800"
  x:DataType="vm:MainViewModel"
  Background="{DynamicResource SystemChromeLowColor}"
  mc:Ignorable="d">
  <Design.DataContext>
    <!--
      This only sets the DataContext for the previewer in an IDE,
      to set the actual DataContext for runtime, set the DataContext property in code (look at
      App.axaml.cs)
    -->
    <vm:MainViewModel />
  </Design.DataContext>
  <Grid Margin="10" RowDefinitions="Auto,Auto,*">
    <Panel
      Grid.Row="0"
      Margin="10"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch">
      <Grid Margin="5" ColumnDefinitions="*,Auto,Auto">
        <TextBlock
          Grid.Column="0"
          VerticalAlignment="Center"
          FontSize="24"
          FontWeight="Bold"
          Text="HDU Net Debugger" />
        <Button
          Grid.Column="1"
          Margin="10,0"
          Background="{DynamicResource SystemAccentColor}"
          Command="{Binding RunChecksCommand}"
          Content="开始测试"
          Foreground="#FFFFFFFF" />
        <Button
          Grid.Column="2"
          Background="{DynamicResource SystemAccentColor}"
          Command="{Binding ExportResultsCommand}"
          Content="导出结果"
          Foreground="#FFFFFFFF" />
      </Grid>
    </Panel>
    <Rectangle
      Grid.Row="1"
      Height="0.5"
      Margin="0,5"
      HorizontalAlignment="Stretch"
      Fill="Gray" />
    <Panel Grid.Row="2" Margin="10">
      <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding CheckItems}">
          <ItemsControl.ItemTemplate>
            <DataTemplate DataType="vm:CheckItemViewModel">
              <components:CheckItemView />
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Panel>
  </Grid>
</UserControl>