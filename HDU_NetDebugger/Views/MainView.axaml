<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:HDU_NetDebugger.ViewModels"
  xmlns:components="clr-namespace:HDU_NetDebugger.Components"
  xmlns:models="clr-namespace:HDU_NetDebugger.Models"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  x:Class="HDU_NetDebugger.Views.MainView"
  x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at
    App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>
  <Grid RowDefinitions="*,Auto,5*"
    Margin="10">
    <Panel Grid.Row="0"
      Margin="10"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch">
      <Grid ColumnDefinitions="*,Auto"
        Margin="5">
        <TextBlock Text="HDU Net Debugger"
          FontSize="24"
          FontWeight="Bold"
          VerticalAlignment="Center"
          Grid.Column="0" />
        <Button Content="开始测试"
          Command="{Binding RunChecksCommand}"
          Background="{DynamicResource SystemAccentColor}"
          Grid.Column="1" />
      </Grid>
    </Panel>
    <Rectangle Grid.Row="1"
      Height="0.5"
      Fill="Gray"
      HorizontalAlignment="Stretch"
      Margin="0,5" />
    <Panel Grid.Row="2"
      Margin="10">
      <ScrollViewer HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding CheckItems}">
          <ItemsControl.ItemTemplate>
            <DataTemplate DataType="vm:CheckItemViewModel">
              <components:CheckItemView />
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Panel>
  </Grid>
</UserControl>